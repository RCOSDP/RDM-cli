{
    "title": "GRDM CLI - Contributors Template schema",
    "description": "For projects' contributors definition JSON Schema",
    "type": "object",
    "properties": {
        "projects": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "$ref": "#/definitions/NodeIdOrNull"
                    },
                    "contributors": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "$ref": "#/definitions/UserId"
                                },
                                "bibliographic": {
                                    "type": "boolean",
                                    "default": true
                                },
                                "permission": {
                                    "$ref": "#/definitions/ContributorPermission"
                                }
                            },
                            "additionalProperties": false,
                            "required": [
                                "id"
                            ]
                        }
                    }
                },
                "additionalProperties": false,
                "required": [
                    "id",
                    "contributors"
                ]
            }
        }
    },
    "required": [
        "projects"
    ],
    "additionalProperties": false,
    "definitions": {
        "UserId": {
            "type": "string",
            "pattern": "^[23456789abcdefghjkmnpqrstuvwxyz]{5}$"
        },
        "NodeId": {
            "type": "string",
            "pattern": "^[23456789abcdefghjkmnpqrstuvwxyz]{5}$"
        },
        "NodeIdOrNull": {
            "anyOf": [
                {
                    "type": "null"
                },
                {
                    "$ref": "#/definitions/NodeId"
                }
            ]
        },
        "ContributorPermission": {
            "enum": [
                "admin",
                "read",
                "write"
            ],
            "default": "write"
        }
    }
}